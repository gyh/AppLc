<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.yangyi.guo.develop.lcrlibrary">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity android:name=".exception.core.RecoveryActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:process=":recover"
            android:screenOrientation="portrait"
            android:theme="@style/RecoveryTheme.NoActionBar"/>
        <service
            android:name=".exception.core.RecoveryService"
            android:enabled="true"
            android:exported="false"
            android:process=":recover">
        </service>
    </application>

</manifest>
